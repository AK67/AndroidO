<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".welcomeActivity"
    android:id="@+id/my_home"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <ImageView
    android:id="@+id/home_slash"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scaleType="center"
    android:background="@drawable/slash_home"
    android:visibility="invisible"
    />

    <ImageView
        android:id="@+id/home_baker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:background="@drawable/baker_home"
        android:visibility="invisible"
    />

    <ImageView
        android:id="@+id/home_burton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:background="@drawable/burton_home"
        android:visibility="invisible"
     />

    <ImageView
        android:id="@+id/backgoundsheet"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:background="@drawable/backgroundsheet"
        android:alpha=".7"
    />

    <Button
        android:id="@+id/take_me_to_action_btn"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/transparentbtn"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_me_to_action"
        android:layout_marginBottom="12dip"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:id="@+id/login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/transparentbtn"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginBottom="78dip"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
      android:id="@+id/home_txt"
      android:textColor="#FFFFFF"
      android:text="@string/make_my_band_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:background="@android:color/transparent"
      android:layout_marginTop="0dip"
      android:layout_gravity="center_horizontal|top"
    />


</FrameLayout>
